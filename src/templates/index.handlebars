<!DOCTYLE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{{htmlTitle}}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <link rel="stylesheet" href="./production.css" inline />
    </head>
    <body>
        <div class="wrap">
            {{>header}}
            {{>menu}}
            <div class="body">
                <div class="content">
                    {{#content}}
                    <div class="sec">
                        <section>
                            {{#if linkTarget}}
                            <h2>
                                <a name="{{linkTarget}}">{{title}}</a>
                            </h2>
                            {{else}}
                            <h2>{{title}}</h2>
                            {{/if}}

                            {{#p}}
                                <p>{{.}}</p>
                            {{/p}}
                        </section>
                    </div>
                    {{/content}}
                </div>
                {{>sidebar}}
            </div>
        </div>
        {{>footer}}
    </body>
</html>
